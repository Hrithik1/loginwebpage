<style>
    .card {
        background-color: #E6AF2E;
    }

    .btn:hover {
        box-shadow: 2px 2px 7px black;
    }
</style>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <%- include ("./partials/messages"); %>

                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                            style="background-color: #ffe7ae;" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" style="background-color: #ffe7ae;" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" style="font-size: 20px;">Login</button>
                </form>
                <p class="lead mt-4">
                    No Account? <a href="/users/register" style="color: rgb(170, 46, 46);">Register</a>
                </p>
        </div>
    </div>
</div>